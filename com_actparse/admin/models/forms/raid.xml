<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="general">
		<field
			name="raidname" 
			type="text"
			label="JGLOBAL_TITLE"
			class="advancedSelect"
			required="true"
		/>

		<field
			name="date"
			type="calendar"
			label="JDATE"
			description="COM_ACTPARSE_FIELD_DATE_DESC"
			class="advancedSelect"
			format="%Y-%m-%d"
		/>

		<field
			name="published"
			type="list"
			label="JPUBLISHED"
			class="advancedSelect"
			size="1"
			default="1">
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="2">JARCHIVED</option>
			<option value="-2">JTRASHED</option>
		</field>

		<field
			name="id"
			type="text"
			label="JGLOBAL_FIELD_ID_LABEL"
			description ="JGLOBAL_FIELD_ID_DESC"
			class="readonly"
			size="10"
			default="0"
			required="true"
			readonly="true"
		/>
	</fieldset>
</form>
