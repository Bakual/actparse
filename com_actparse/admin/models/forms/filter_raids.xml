<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="filter">
		<field
			name="search"
			type="text"
			label="COM_ACTPARSE_FILTER_SEARCH_DESC"
			hint="JSEARCH_FILTER"
		/>
		<field
			name="published"
			type="list"
			label="COM_ACTPARSE_FILTER_PUBLISHED"
			description="COM_ACTPARSE_FILTER_PUBLISHED_DESC"
			class="advancedSelect"
			onchange="this.form.submit();"
			>
			<option value="">JOPTION_SELECT_PUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="1">JPUBLISHED</option>
		</field>
	</fields>
	<fields name="list">
		<field
			name="fullordering"
			type="list"
			label="COM_ACTPARSE_LIST_FULL_ORDERING"
			description="COM_ACTPARSE_LIST_FULL_ORDERING_DESC"
			class="advancedSelect"
			onchange="this.form.submit();"
			>
			<option value="">JGLOBAL_SORT_BY</option>
			<option value="raids.published ASC">JSTATUS_ASC</option>
			<option value="raids.published DESC">JSTATUS_DESC</option>
			<option value="raids.title ASC">JGLOBAL_TITLE_ASC</option>
			<option value="raids.title DESC">JGLOBAL_TITLE_DESC</option>
			<option value="raids.id ASC">JGRID_HEADING_ID_ASC</option>
			<option value="raids.id DESC">JGRID_HEADING_ID_DESC</option>
		</field>
		<field
			name="limit"
			type="limitbox"
			label="COM_ACTPARSE_LIST_LIMIT"
			description="COM_ACTPARSE_LIST_LIMIT_DESC"
			class="input-mini advancedSelect"
			default="25"
			onchange="this.form.submit();"
		/>
	</fields>
</form>
