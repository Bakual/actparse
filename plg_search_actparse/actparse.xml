<?xml version="1.0" encoding="utf-8"?>
<extension version="1.6" type="plugin" group="search" method="upgrade">
	<name>plg_search_actparse</name>
	<author>Thomas Hunziker</author>
	<creationDate>2014-10-18</creationDate>
	<copyright>(C) 2014</copyright>
	<authorEmail>admin@bakual.net</authorEmail>
	<authorUrl>http://www.bakual.net</authorUrl>
	<version>2.0.0</version>
	<description>PLG_SEARCH_ACTPARSE_XML_DESCRIPTION</description>
	<license>GNU/GPL</license>
	<files>
		<filename plugin="actparse">actparse.php</filename>
		<folder>language</folder>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="search_limit"
					type="text"
					label="PLG_SEARCH_ACTPARSE_FIELD_SEARCHLIMIT_LABEL"
					description="PLG_SEARCH_ACTPARSE_FIELD_SEARCHLIMIT_DESC"
					default="50"
				/>
				<field
					name="actparse_title"
					type="radio"
					label="PLG_SEARCH_ACTPARSE_FIELD_TITLE_LABEL"
					description="PLG_SEARCH_ACTPARSE_FIELD_TITLE_DESC"
					class="btn-group btn-group-yesno"
					default="1"
					>
					<option value="1">JON</option>
					<option value="0">JOFF</option>
				</field>
				<field
					name="actparse_zone"
					type="radio"
					label="PLG_SEARCH_ACTPARSE_FIELD_ZONE_LABEL"
					description="PLG_SEARCH_ACTPARSE_FIELD_ZONE_DESC"
					class="btn-group btn-group-yesno"
					default="1"
					>
					<option value="1">JON</option>
					<option value="0">JOFF</option>
				</field>
				<field
					name="actparse_starttime"
					type="radio"
					label="PLG_SEARCH_ACTPARSE_FIELD_STARTDATE_LABEL"
					description="PLG_SEARCH_ACTPARSE_FIELD_STARTDATE_DESC"
					class="btn-group btn-group-yesno"
					default="1"
					>
					<option value="1">JON</option>
					<option value="0">JOFF</option>
				</field>
				<field
					name="menuitem"
					type="menuitem"
					label="MOD_ACTPARSE_FIELD_MENUITEM_LABEL"
					description="MOD_ACTPARSE_FIELD_MENUITEM_DESC"
					default=""
					state="1"
				/>
			</fieldset>
		</fields>
	</config>
</extension>
