<?xml version="1.0" encoding="UTF-8"?>
<extension type="module" version="1.6" method="upgrade">
	<name>mod_actparse</name>
	<author>Thomas Hunziker</author>
	<creationDate>2014-10-18</creationDate>
	<copyright>(C) 2014</copyright>
	<authorEmail>admin@bakual.net</authorEmail>
	<authorUrl>http://www.bakual.net</authorUrl>
	<version>2.0.0</version>
	<description>MOD_ACTPARSE_XML_DESCRIPTION</description>
	<license>GNU/GPL</license>
	<files>
		<filename module="mod_actparse">mod_actparse.php</filename>
		<filename>mod_actparse.xml</filename>
		<filename>helper.php</filename>
		<folder>tmpl</folder>
		<folder>language</folder>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="actparse_limit"
					type="text"
					label="MOD_ACTPARSE_FIELD_NUMBER_LABEL"
					description="MOD_ACTPARSE_FIELD_NUMBER_DESC"
					default="5"
				/>
				<field
					name="actparse_order"
					type="list"
					label="MOD_ACTPARSE_FIELD_ORDER_LABEL"
					description="MOD_ACTPARSE_FIELD_ORDER_DESC"
					default="date DESC"
					>
					  <option value="date ASC">MOD_ACTPARSE_ORDER_OPTION_1</option>
					  <option value="date DESC">MOD_ACTPARSE_ORDER_OPTION_2</option>
					  <option value="raidname ASC">MOD_ACTPARSE_ORDER_OPTION_3</option>
					  <option value="raidname DESC">MOD_ACTPARSE_ORDER_OPTION_4</option>
				</field>
				<field
					name="menuitem"
					type="menuitem"
					label="MOD_ACTPARSE_FIELD_MENUITEM_LABEL"
					description="MOD_ACTPARSE_FIELD_MENUITEM_DESC"
					default=""
					state="1"
				/>
			</fieldset>
		</fields>
	</config>
</extension>


